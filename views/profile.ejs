<div class = 'container'>

<div class = 'pic-container'>
	<img src="<%= profile_user.avatar %>" alt="<%= profile_user.name %>" width='200px'>
</div>
<div class = 'detail-container'>
<% if(profile_user.name){ %>
<div><strong>Name</strong> : <%= profile_user.name %></div>
<% } %> 
<% if(profile_user.email){ %>
<div><strong>E-mail</strong> : <%= profile_user.email %></div>
<% } %>
<% if(user.id == profile_user.id){ %>
<div>
	<button id='update'><a href = '/users/profile/update/<%= profile_user.id %>'>Update Profile</a></button>
	<button id='delete'><a href = '/users/delete/<%= profile_user.id %>'>Delete Profile</a></button>
</div>
<% } %>

</div>
