<div class='normal-flex'>
<section id='feed-posts'>

	<% if(locals.user){ %>
	<div class='main-sub-head'>Posts:</div>
	<form action="/posts/create" method="post" id='new-post-form'>
		<textarea name ='content' rows='3' cols='30' placeholder="Type your post here" required></textarea>
		<input type='submit' value="Post">
	</form>
	<% } %>
	
	<div id='post-container'>
		<ul>
			<% for(post of posts){ %>

			 <%- include('_post'); %>

			<% }; %>
		</ul>
	</div>

</section>


<section id='user-friends'>
	<% if(locals.user){ %>
	<big>Friends:</big>
	<% }else{ %>
	<big>Users</big>
	<% } %>
	<% for(u of all_users){ %>
		<p>
			<!-- all users other than the logged in -->
		<% if(!locals.user){ %>
		<a href='/users/profile/<%= u.id %>'><%= u.name %></a>
		<% }else{ %>
		<% if(locals.user.id != u.id){ %>
			<a href='/users/profile/<%= u.id %>'><%= u.name %></a>
		<% } %>
		<% } %>
		
		</p>
	<% } %>
</section>
</div>
<script type="text/javascript" src='/js/home_posts.js'></script>