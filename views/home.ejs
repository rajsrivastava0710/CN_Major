<div id='home-container'>
<section id='feed-posts'>

	<% if(locals.user){ %>
	<div class='main-sub-head'>Post Here:</div>
	<form action="/posts/create" method="post" id='new-post-form'>
		<textarea name ='content' rows='7' cols='45' placeholder="Type your post here" required></textarea>
		<div>
			<input type='submit' value="Post">
		</div>
	</form>
	<% } %>
	
	<div id='post-container'>
		<ul id='post-ul'>
			<% for(post of posts){ %>

			 <%- include('_post'); %>

			<% }; %>
		</ul>
	</div>

</section>


<section id='user-friends'>
	<div class='sidebar-heading'>
	<% if(locals.user){ %>
	<big>Friends</big>
	<% }else{ %>
	<big>Users</big>
	<% } %>
	</div>
	<% for(u of all_users){ %>
		<% if(!locals.user){ %>
		<p>
			<!-- <% if(! u.avatar){ %>
			<img src='/uploads/users/default-avatar/avatar.jpg' width='20'>
			<% }else{ %>
			<img src = '<%= u.avatar %>' width='20'>
			<% } %> -->
			<img src = '<%= u.avatar %>'>

			<a href='/users/profile/<%= u.id %>'><%= u.name.split(" ")[0] %></a>
		</p>
		<% }else{ %>
		<% if(locals.user.id != u.id){ %>
		<p>			
			<!-- <% if(! u.avatar){ %>
			<img src='/uploads/users/default-avatar/avatar.jpg' width='20'>
			<% }else{ %>
			<img src = '<%= u.avatar %>' width='20'>
			<% } %> -->
			<img src = '<%= u.avatar %>'>

			<a href='/users/profile/<%= u.id %>'><%= u.name.split(" ")[0] %></a>
		</p>
		<% } %>
		<% } %>
	<% } %>
</section>
</div>

